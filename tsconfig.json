{
    "compilerOptions": {
        "module": "commonjs",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "isolatedModules": true,
        "esModuleInterop": true,
        "outDir": "dist",
        "lib": ["ES6", "DOM", "ES2017"],
        "target": "ES5",
        "jsx": "react",
        "allowJs": true,
        "skipLibCheck": true
    },
    "include": ["src/**/*", "tests/**/*", "./jest-setup.ts"],
    "exclude": ["node_modules"]
}